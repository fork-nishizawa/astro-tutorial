---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = '私について'

const identify = {
  firstName: 'yoh',
  country: 'japan',
  occupation: 'FE',
  hobbies: ['skateboard']
}

const skills = ['HTML', 'CSS', 'Javascript']
const happy = true
const finished = false
const skillColor = 'navy'
const fontWeight = 'bold'
const textCase = 'uppercase'
---

<BaseLayout pageTitle={pageTitle}>
  <style define:vars={{skillColor, fontWeight, textCase}}>
    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>
  <h2>私のAstroサイトについて</h2>
  <ul>
    <li>私の名前は{identify.firstName}です</li>
    <li>{identify.country}に住んでいて、{identify.occupation}として働いています</li>
    <li>趣味は
      {identify.hobbies.map(hobby => hobby)}
    です</li>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
  {happy && <p>Astroを学べて幸せです</p>}
  {finished ? <p>Astroを学びおえました</p> : <p>Astroは勉強中です</p>}
</BaseLayout>